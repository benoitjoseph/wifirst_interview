<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-5 col-xl-4 my-5">
      <h1 class="text-center mb-3">
        Sign up
      </h1>

      <p class="text-muted text-center mb-5">
        Create an account to get started
      </p>

      <%= render partial: 'shared/flashes' %>

      <%= form_for(@user, url: sign_up_path, method: :post, data: { turbo: false }) do |f| %>
        <div class="form-group">
          <%= f.label :name, class: 'form-label' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'John Doe' %>
        </div>

        <div class="form-group">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'name@address.com' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', placeholder: '******' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-lg w-100 btn-primary mb-3' %>
        </div>
      <% end %>

      <div class="d-flex justify-content-center">
        <%= link_to "Already have an account? Sign in", sign_in_path, class: 'text-primary text-center' %>
      </div>
    </div>
  </div>
</div>
